<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="#E6E6E6"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="20dp"
            android:elevation="8dp"
            android:layout_height="130dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    android:backgroundTint="#ECCFC6"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tvPhong"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Phòng :"
                            android:textStyle="bold"
                            android:layout_marginBottom="7dp"
                            android:textSize="16dp"/>

                        <TextView
                            android:id="@+id/tvCaHoc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ca :"
                            android:textStyle="bold"
                            android:textSize="16dp"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mã môn:"
                            android:textSize="18dp"/>

                        <TextView
                            android:id="@+id/tvMaMon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" IT1"
                            android:textSize="18dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tên môn:"
                            android:textSize="18dp"/>

                        <TextView
                            android:id="@+id/tvTenMon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Android"
                            android:textSize="18dp"/>
                    </LinearLayout>

                </LinearLayout>
                <ImageView
                    android:id="@+id/imgShowDetail_lichhoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/right"
                    android:layout_marginTop="45dp"
                    android:layout_marginLeft="15dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="95dp"
            android:id="@+id/cardview_lich_hoc"
            android:layout_width="match_parent"
            app:cardCornerRadius="20dp"
            android:layout_height="90dp">
            <View
                android:layout_width="300dp"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="30dp"
                android:layout_height="1dp"
                android:background="#919191" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_marginTop="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngày học: "
                            android:textSize="18dp"/>

                        <TextView
                            android:id="@+id/tvNgayHoc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="06/02/2003"
                            android:textSize="18dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_marginTop="50dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GV: "
                            android:textSize="18dp"/>

                        <TextView
                            android:id="@+id/tvTenGiangVien"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tùng"
                            android:textSize="18dp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>



</LinearLayout>