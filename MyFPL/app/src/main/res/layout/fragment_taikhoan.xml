<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FAFAFA"
    android:orientation="vertical"
    android:id="@+id/fragment_taikhoan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/g8"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            app:cardCornerRadius="90dp"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/imgProfileNav"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/avtt"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingTop="50dp"
            >
            <TextView
                android:id="@+id/tvNameProfileNav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"

                android:text="Nguyễn Thanh Tùng"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvEmailProfileNav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tungntps21084@fpt.edu.vn"
                android:layout_gravity="center"
                android:textColor="@color/black"

                android:textSize="16dp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/g9"/>
            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="Hồ sơ cá nhân"
                android:textSize="20dp"
                android:textColor="#353535"
                android:paddingLeft="30dp"
                android:paddingTop="10dp"
                />
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/right1"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/g10"/>
            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="Khen thưởng/ kỷ luật "
                android:textSize="20dp"
                android:paddingTop="10dp"
                android:textColor="#454545"
                android:paddingLeft="30dp"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/g11"/>
            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="Cập nhật ảnh thẻ sinh viên"
                android:textSize="20dp"
                android:paddingTop="10dp"
                android:textColor="#353535"
                android:paddingLeft="30dp"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/g13"/>
            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="Câu hỏi thường gặp"
                android:textSize="20dp"
                android:paddingTop="10dp"
                android:textColor="#353535"
                android:paddingLeft="30dp"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/g12"/>
            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="Cài đặt"
                android:textSize="20dp"
                android:textColor="#353535"
                android:paddingTop="10dp"
                android:paddingLeft="30dp"
                />
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/right1"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="LinearLogOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="90dp"
                android:layout_marginLeft="20dp"
                android:backgroundTint="#DADADA"
                >
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:src="@drawable/log2"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:text="Đăng xuất"
                android:textSize="20dp"
                android:paddingTop="10dp"
                android:textColor="#353535"
                android:paddingLeft="30dp"
                />

        </LinearLayout>
    </LinearLayout>



</LinearLayout>